// Prisma schema for PostgreSQL and MongoDB

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

datasource mongo {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  projects Project[]
}

model Project {
  id         Int    @id @default(autoincrement())
  owner      String
  name       String
  url        String
  stars      Int
  forks      Int
  issues     Int
  createdAt  Int
  user       User   @relation(fields: [userId], references: [id])
  userId     Int
}
